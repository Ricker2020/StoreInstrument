<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewInstrument">

    <include
        android:id="@+id/include"
        layout="@layout/header"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="16dp" />


    <ImageView
        android:id="@+id/view_instrument_img"
        android:layout_width="243dp"
        android:layout_height="260dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.353"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tv_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="stock"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/view_instrument_precio"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view_instrument_precio"
        app:layout_constraintTop_toBottomOf="@+id/view_instrument_precio" />

    <TextView
        android:id="@+id/view_instrument_tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="tipo"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_stock"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_stock"
        app:layout_constraintTop_toBottomOf="@+id/tv_stock" />

    <Button
        android:id="@+id/btn_add_carrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="AÃ±adir"
        android:background="@color/principal"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/view_instrument_img"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/view_instrument_img"
        app:layout_constraintTop_toBottomOf="@+id/view_instrument_img" />

    <TextView
        android:id="@+id/view_instrument_precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:text="precio"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_instrument_img" />

    <ScrollView
        android:layout_width="329dp"
        android:layout_height="165dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.439"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_instrument_tipo"
        app:layout_constraintVertical_bias="0.05">

        <TextView
            android:id="@+id/view_instrument_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="descripcion"
            android:textSize="20sp" />
    </ScrollView>

    <TextView
        android:id="@+id/view_instrument_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="stock"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_stock"
        app:layout_constraintStart_toEndOf="@+id/tv_stock"
        app:layout_constraintTop_toTopOf="@+id/tv_stock"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/view_instrument_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:text="nombre"
        android:textColor="@color/principal"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_instrument_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="code"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />

</androidx.constraintlayout.widget.ConstraintLayout>